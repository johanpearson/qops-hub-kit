{
  "name": "@qops/hub-kit",
  "version": "1.0.0",
  "description": "A utility package for creating Azure Function v4 APIs with TypeScript - featuring OpenAPI docs, JWT auth, error handling, and correlation IDs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix --cache"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johanpearson/qops-hub-kit.git"
  },
  "keywords": [
    "azure",
    "azure-functions",
    "typescript",
    "openapi",
    "jwt",
    "middleware",
    "api",
    "correlation-id",
    "error-handling",
    "validation",
    "zod"
  ],
  "author": "Johan Pearson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johanpearson/qops-hub-kit/issues"
  },
  "homepage": "https://github.com/johanpearson/qops-hub-kit#readme",
  "private": true,
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.11.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

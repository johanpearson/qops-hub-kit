{
  "name": "@qops/hub-kit",
  "version": "0.1.1",
  "description": "A utility package for creating Azure Function v4 APIs with TypeScript - featuring OpenAPI docs, JWT auth, error handling, and correlation IDs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix --cache"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://dev.azure.com/tech-delivery-team/QOPS/_git/qops-hub-kit"
  },
  "keywords": [
    "azure",
    "azure-functions",
    "typescript",
    "openapi",
    "jwt",
    "middleware",
    "api",
    "correlation-id",
    "error-handling",
    "validation",
    "zod"
  ],
  "author": "Johan Pearson",
  "license": "MIT",
  "homepage": "https://dev.azure.com/tech-delivery-team/QOPS/_git/qops-hub-kit",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@azure/functions": "^4.11.0",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
